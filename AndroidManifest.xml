<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.informationsystem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPatientData"
            android:label="@string/title_activity_add_patient_data" >
        </activity>
        <activity
            android:name=".SearchPatient"
            android:label="@string/title_activity_search_patient" >
        </activity>
        <activity
            android:name=".PatientView"
            android:label="@string/title_activity_patient_view" >
        </activity>
        <activity
            android:name=".AddUser"
            android:label="@string/title_activity_add_user" >
        </activity>
    </application>

</manifest>
